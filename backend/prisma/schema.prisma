datasource db {
  provider = "postgresql"
  url      = "postgresql://armico:armico@postgres:5432/armico"
}

generator client {
  provider = "prisma-client-js"
}

enum UserRole {
  SUPER_ADMIN
  MANAGER
  USER
}

enum AssignmentStatus {
  ACTIVE
  ARCHIVED
}

enum PlanStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}

enum SlotStatus {
  PLANNED
  CONFIRMED
  REPLACED
  CANCELLED
}

enum NotificationType {
  ASSIGNMENT_CREATED
  ASSIGNMENT_UPDATED
  ASSIGNMENT_CANCELLED
  ASSIGNMENT_MOVED
}

// üî• –ù–û–í–´–ô enum –¥–ª—è —Ç–∏–ø–∞ —Å–º–µ–Ω—ã
enum ShiftKind {
  DEFAULT   // –æ–±—ã—á–Ω–∞—è —Å–º–µ–Ω–∞
  OFFICE    // —Ä–∞–±–æ—Ç–∞ –≤ –æ—Ñ–∏—Å–µ
  REMOTE    // —É–¥–∞–ª—ë–Ω–∫–∞
  DAY_OFF   // –≤—ã—Ö–æ–¥–Ω–æ–π / day off
}

// üî• –ù–û–í–´–ô enum –¥–ª—è —Å—Ç–∞—Ç—É—Å–∞ –∑–∞–ø—Ä–æ—Å–∞ –∫–æ—Ä—Ä–µ–∫—Ç–∏—Ä–æ–≤–∫–∏ —Ä–∞—Å–ø–∏—Å–∞–Ω–∏—è
enum AdjustmentStatus {
  PENDING   // –æ–∂–∏–¥–∞–µ—Ç —Ä–µ—à–µ–Ω–∏—è
  APPROVED  // –æ–¥–æ–±—Ä–µ–Ω
  REJECTED  // –æ—Ç–∫–ª–æ–Ω—ë–Ω
}

model Org {
  id          String        @id @default(cuid())
  name        String
  slug        String        @unique
  users       User[]
  workplaces  Workplace[]
  slots       Slot[]
  constraints Constraint[]
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
}

model User {
  id            String                 @id @default(cuid())
  orgId         String?
  org           Org?                   @relation(fields: [orgId], references: [id])
  email         String                 @unique
  password      String
  fullName      String?
  position      String?
  role          UserRole               @default(USER)

  isSystemUser  Boolean                @default(false)
  phone         String?

  assignments   Assignment[]
  notifications Notification[]
  slots         Slot[]
  constraints   Constraint[]
  // üî• –∑–∞–ø—Ä–æ—Å—ã –∫–æ—Ä—Ä–µ–∫—Ç–∏—Ä–æ–≤–æ–∫ —Ä–∞—Å–ø–∏—Å–∞–Ω–∏—è –æ—Ç —ç—Ç–æ–≥–æ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è
  scheduleAdjustments AssignmentAdjustment[]

  createdAt     DateTime               @default(now())
  updatedAt     DateTime               @updatedAt
}

model Workplace {
  id          String       @id @default(cuid())
  orgId       String
  org         Org          @relation(fields: [orgId], references: [id])
  code        String
  name        String
  location    String?
  isActive    Boolean      @default(true)
  assignments Assignment[]
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  @@unique([orgId, code])
}

model Plan {
  id        String     @id @default(cuid())
  name      String
  startsAt  DateTime
  endsAt    DateTime
  status    PlanStatus @default(DRAFT)
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  slots     Slot[]
}

model Slot {
  id        String     @id @default(cuid())
  planId    String
  plan      Plan       @relation(fields: [planId], references: [id])
  orgId     String
  org       Org        @relation(fields: [orgId], references: [id])
  userId    String
  user      User       @relation(fields: [userId], references: [id])
  dateStart DateTime
  dateEnd   DateTime
  status    SlotStatus @default(PLANNED)
  colorCode String?
  note      String?
  locked    Boolean    @default(false)
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  @@index([planId])
  @@index([dateStart, userId])
  @@index([dateStart, orgId])
}

model Constraint {
  id        String   @id @default(cuid())
  type      String
  payload   Json
  userId    String?
  user      User?    @relation(fields: [userId], references: [id])
  orgId     String?
  org       Org?     @relation(fields: [orgId], references: [id])
  createdAt DateTime @default(now())
}

model Assignment {
  id          String           @id @default(cuid())
  userId      String
  user        User             @relation(fields: [userId], references: [id])
  workplaceId String
  workplace   Workplace        @relation(fields: [workplaceId], references: [id])
  startsAt    DateTime
  endsAt      DateTime?
  status      AssignmentStatus @default(ACTIVE)
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt

  /// –º—è–≥–∫–æ–µ —É–¥–∞–ª–µ–Ω–∏–µ ‚Äî –µ—Å–ª–∏ –Ω–µ null, –∑–Ω–∞—á–∏—Ç –ª–µ–∂–∏—Ç –≤ –∫–æ—Ä–∑–∏–Ω–µ
  deletedAt   DateTime?

  shifts      AssignmentShift[]
  // üî• –∑–∞–ø—Ä–æ—Å—ã –∫–æ—Ä—Ä–µ–∫—Ç–∏—Ä–æ–≤–æ–∫, —Å–≤—è–∑–∞–Ω–Ω—ã–µ —Å —ç—Ç–∏–º –Ω–∞–∑–Ω–∞—á–µ–Ω–∏–µ–º
  adjustments AssignmentAdjustment[]
}

model AssignmentShift {
  id           String      @id @default(cuid())
  assignmentId String
  assignment   Assignment  @relation(fields: [assignmentId], references: [id])

  /// –î–∞—Ç–∞ —Å–º–µ–Ω—ã (–¥–µ–Ω—å)
  date         DateTime

  /// –ö–æ–Ω–∫—Ä–µ—Ç–Ω–æ–µ –≤—Ä–µ–º—è –Ω–∞—á–∞–ª–∞/–æ–∫–æ–Ω—á–∞–Ω–∏—è —Å–º–µ–Ω—ã
  startsAt     DateTime
  endsAt       DateTime

  /// üî• –¢–∏–ø —Å–º–µ–Ω—ã (–æ—Ñ–∏—Å, —É–¥–∞–ª—ë–Ω–∫–∞, day off –∏ —Ç.–¥.)
  kind         ShiftKind   @default(DEFAULT)

  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt

  @@index([assignmentId, date])
}

model Notification {
  id        String           @id @default(cuid())
  userId    String
  user      User             @relation(fields: [userId], references: [id])
  type      NotificationType
  payload   Json
  createdAt DateTime         @default(now())
  readAt    DateTime?
}

model SmsSettings {
  id        String   @id @default(cuid())
  apiUrl    String?
  apiKey    String?
  sender    String?
  enabled   Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// üî• –ù–û–í–ê–Ø —Ç–∞–±–ª–∏—Ü–∞ –∑–∞–ø—Ä–æ—Å–æ–≤ –Ω–∞ –∫–æ—Ä—Ä–µ–∫—Ç–∏—Ä–æ–≤–∫—É —Ä–∞—Å–ø–∏—Å–∞–Ω–∏—è
model AssignmentAdjustment {
  id           String            @id @default(cuid())

  assignmentId String
  assignment   Assignment        @relation(fields: [assignmentId], references: [id])

  userId       String
  user         User              @relation(fields: [userId], references: [id])

  /// –î–µ–Ω—å, –∫ –∫–æ—Ç–æ—Ä–æ–º—É –æ—Ç–Ω–æ—Å–∏—Ç—Å—è –∫–æ—Ä—Ä–µ–∫—Ç–∏—Ä–æ–≤–∫–∞
  date         DateTime

  /// –ï—Å–ª–∏ –Ω–∞–¥–æ —Å–∫–æ—Ä—Ä–µ–∫—Ç–∏—Ä–æ–≤–∞—Ç—å –∫–æ–Ω–∫—Ä–µ—Ç–Ω—ã–µ —á–∞—Å—ã ‚Äî –º–æ–∂–Ω–æ –∑–∞–ø–æ–ª–Ω–∏—Ç—å
  startsAt     DateTime?
  endsAt       DateTime?

  /// –ö–∞–∫—É—é —Å–º–µ–Ω—É —Ö–æ—á–µ—Ç –ø–æ —Å—É—Ç–∏ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—å (—á–∞—â–µ –≤—Å–µ–≥–æ DAY_OFF)
  kind         ShiftKind        @default(DAY_OFF)

  /// –ö–æ–º–º–µ–Ω—Ç–∞—Ä–∏–π —Å–æ—Ç—Ä—É–¥–Ω–∏–∫–∞ (–ø–æ—á–µ–º—É –ø—Ä–æ—Å–∏—Ç –∫–æ—Ä—Ä–µ–∫—Ç–∏—Ä–æ–≤–∫—É)
  comment          String
  /// –ö–æ–º–º–µ–Ω—Ç–∞—Ä–∏–π –º–µ–Ω–µ–¥–∂–µ—Ä–∞ –ø—Ä–∏ –æ–¥–æ–±—Ä–µ–Ω–∏–∏ / –æ—Ç–∫–∞–∑–µ
  managerComment   String?

  status       AdjustmentStatus  @default(PENDING)

  createdAt    DateTime          @default(now())
  updatedAt    DateTime          @updatedAt

  @@index([assignmentId])
  @@index([userId, date])
}