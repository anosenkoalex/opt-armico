datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum UserRole {
  USER
  AUDITOR
  ORG_MANAGER
  ADMIN
  SUPER_ADMIN
}

enum AssignmentStatus {
  ACTIVE
  ARCHIVED
}

enum PlanStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}

enum SlotStatus {
  PLANNED
  CONFIRMED
  REPLACED
  CANCELLED
}

enum NotificationType {
  ASSIGNMENT_CREATED
  ASSIGNMENT_UPDATED
}

model Org {
  id         String       @id @default(cuid())
  name       String
  slug       String       @unique
  users      User[]
  workplaces Workplace[]
  slots      Slot[]
  constraints Constraint[]
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @updatedAt
}

model User {
  id             String         @id @default(cuid())
  orgId          String?
  org            Org?           @relation(fields: [orgId], references: [id])
  email          String         @unique
  password       String
  fullName       String?
  position       String?
  role           UserRole       @default(USER)
  assignments    Assignment[]
  notifications  Notification[]
  slots          Slot[]
  constraints    Constraint[]
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt
}

model Workplace {
  id          String       @id @default(cuid())
  orgId       String
  org         Org          @relation(fields: [orgId], references: [id])
  code        String
  name        String
  location    String?
  isActive    Boolean      @default(true)
  assignments Assignment[]
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  @@unique([orgId, code])
}

model Plan {
  id        String     @id @default(cuid())
  name      String
  startsAt  DateTime
  endsAt    DateTime
  status    PlanStatus @default(DRAFT)
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  slots     Slot[]
}

model Slot {
  id        String     @id @default(cuid())
  planId    String
  plan      Plan       @relation(fields: [planId], references: [id])
  orgId     String
  org       Org        @relation(fields: [orgId], references: [id])
  userId    String
  user      User       @relation(fields: [userId], references: [id])
  dateStart DateTime
  dateEnd   DateTime
  status    SlotStatus @default(PLANNED)
  colorCode String?
  note      String?
  locked    Boolean    @default(false)
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  @@index([planId])
  @@index([dateStart, userId])
  @@index([dateStart, orgId])
}

model Constraint {
  id        String   @id @default(cuid())
  type      String
  payload   Json
  userId    String?
  user      User?    @relation(fields: [userId], references: [id])
  orgId     String?
  org       Org?     @relation(fields: [orgId], references: [id])
  createdAt DateTime @default(now())
}

model Assignment {
  id          String           @id @default(cuid())
  userId      String
  user        User             @relation(fields: [userId], references: [id])
  workplaceId String
  workplace   Workplace        @relation(fields: [workplaceId], references: [id])
  startsAt    DateTime
  endsAt      DateTime?
  status      AssignmentStatus @default(ACTIVE)
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt
}

model Notification {
  id        String           @id @default(cuid())
  userId    String
  user      User             @relation(fields: [userId], references: [id])
  type      NotificationType
  payload   Json
  createdAt DateTime         @default(now())
  readAt    DateTime?
}
