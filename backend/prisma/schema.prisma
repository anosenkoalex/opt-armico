datasource db {
  provider = "postgresql"
  url      = "postgresql://armico:armico@postgres:5432/armico"
}

generator client {
  provider = "prisma-client-js"
}

enum UserRole {
  SUPER_ADMIN
  MANAGER
  USER
}

enum AssignmentStatus {
  ACTIVE
  ARCHIVED
}

enum PlanStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}

enum SlotStatus {
  PLANNED
  CONFIRMED
  REPLACED
  CANCELLED
}

enum NotificationType {
  ASSIGNMENT_CREATED
  ASSIGNMENT_UPDATED
  ASSIGNMENT_CANCELLED
  ASSIGNMENT_MOVED
}

enum ShiftKind {
  DEFAULT
  OFFICE
  REMOTE
  DAY_OFF
}

enum AdjustmentStatus {
  PENDING
  APPROVED
  REJECTED
}

enum AssignmentRequestStatus {
  PENDING
  APPROVED
  REJECTED
}

model Org {
  id          String        @id @default(cuid())
  name        String
  slug        String        @unique

  users       User[]
  workplaces  Workplace[]
  slots       Slot[]
  constraints Constraint[]

  assignmentRequests AssignmentRequest[]

  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
}

model User {
  id            String   @id @default(cuid())
  orgId         String?
  org           Org?     @relation(fields: [orgId], references: [id])

  email         String   @unique
  password      String
  passwordPlain String?

  fullName      String?
  position      String?
  role          UserRole @default(USER)

  isSystemUser  Boolean  @default(false)
  phone         String?

  passwordUpdatedAt DateTime?
  passwordSentAt    DateTime?

  assignments   Assignment[]
  notifications Notification[]
  slots         Slot[]
  constraints   Constraint[]
  scheduleAdjustments AssignmentAdjustment[]

  assignmentRequests        AssignmentRequest[] @relation("AssignmentRequestRequester")
  decidedAssignmentRequests AssignmentRequest[] @relation("AssignmentRequestDecider")

  /// üîπ –û—Ç—á—ë—Ç—ã –ø–æ –æ—Ç—Ä–∞–±–æ—Ç–∞–Ω–Ω—ã–º —á–∞—Å–∞–º
  workReports   WorkReport[]

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Workplace {
  id          String   @id @default(cuid())
  orgId       String
  org         Org      @relation(fields: [orgId], references: [id])

  code        String
  name        String
  location    String?
  isActive    Boolean  @default(true)
  color       String?

  assignments Assignment[]
  assignmentRequests AssignmentRequest[]

  workReports WorkReport[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([orgId, code])
}

model Plan {
  id        String     @id @default(cuid())
  name      String
  startsAt  DateTime
  endsAt    DateTime
  status    PlanStatus @default(DRAFT)

  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  slots     Slot[]
}

model Slot {
  id        String   @id @default(cuid())

  planId    String
  plan      Plan     @relation(fields: [planId], references: [id])

  orgId     String
  org       Org      @relation(fields: [orgId], references: [id])

  userId    String
  user      User     @relation(fields: [userId], references: [id])

  dateStart DateTime
  dateEnd   DateTime

  status    SlotStatus @default(PLANNED)
  colorCode String?
  note      String?
  locked    Boolean    @default(false)

  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  @@index([planId])
  @@index([dateStart, userId])
  @@index([dateStart, orgId])
}

model Constraint {
  id        String   @id @default(cuid())
  type      String
  payload   Json

  userId    String?
  user      User?    @relation(fields: [userId], references: [id])

  orgId     String?
  org       Org?     @relation(fields: [orgId], references: [id])

  createdAt DateTime @default(now())
}

model Assignment {
  id          String           @id @default(cuid())

  userId      String
  user        User             @relation(fields: [userId], references: [id])

  workplaceId String
  workplace   Workplace        @relation(fields: [workplaceId], references: [id])

  startsAt    DateTime
  endsAt      DateTime?

  status      AssignmentStatus @default(ACTIVE)

  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt
  deletedAt   DateTime?

  shifts      AssignmentShift[]
  adjustments AssignmentAdjustment[]

  request     AssignmentRequest?
}

model AssignmentShift {
  id           String     @id @default(cuid())

  assignmentId String
  assignment   Assignment @relation(fields: [assignmentId], references: [id])

  date         DateTime
  startsAt     DateTime
  endsAt       DateTime
  kind         ShiftKind  @default(DEFAULT)

  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt

  @@index([assignmentId, date])
}

model Notification {
  id        String           @id @default(cuid())

  userId    String
  user      User             @relation(fields: [userId], references: [id])

  type      NotificationType
  payload   Json

  createdAt DateTime         @default(now())
  readAt    DateTime?
}

model SmsSettings {
  id        String   @id @default(cuid())
  apiUrl    String?
  apiKey    String?
  sender    String?
  enabled   Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model AssignmentAdjustment {
  id           String            @id @default(cuid())

  assignmentId String
  assignment   Assignment        @relation(fields: [assignmentId], references: [id])

  userId       String
  user         User              @relation(fields: [userId], references: [id])

  date         DateTime
  startsAt     DateTime?
  endsAt       DateTime?
  kind         ShiftKind          @default(DAY_OFF)

  comment          String
  managerComment   String?

  status       AdjustmentStatus  @default(PENDING)

  createdAt    DateTime          @default(now())
  updatedAt    DateTime          @updatedAt

  @@index([assignmentId])
  @@index([userId, date])
}

model AssignmentRequest {
  id              String                  @id @default(cuid())

  orgId           String
  org             Org                     @relation(fields: [orgId], references: [id])

  requesterId     String
  requester       User                    @relation("AssignmentRequestRequester", fields: [requesterId], references: [id])

  workplaceId     String?
  workplace       Workplace?              @relation(fields: [workplaceId], references: [id])

  dateFrom        DateTime
  dateTo          DateTime

  slots           Json
  comment         String?
  status          AssignmentRequestStatus  @default(PENDING)

  decidedById     String?
  decidedBy       User?                   @relation("AssignmentRequestDecider", fields: [decidedById], references: [id])
  decidedAt       DateTime?
  decisionComment String?

  assignmentId    String?                 @unique
  assignment      Assignment?             @relation(fields: [assignmentId], references: [id])

  createdAt       DateTime                @default(now())
  updatedAt       DateTime                @updatedAt

  @@index([orgId, status])
  @@index([status])
  @@index([requesterId])
  @@index([workplaceId])
  @@index([decidedById])
}

