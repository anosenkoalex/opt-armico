datasource db {
  provider = "postgresql"
  url      = "postgresql://armico:armico@postgres:5432/armico"
}

generator client {
  provider = "prisma-client-js"
}

enum UserRole {
  SUPER_ADMIN
  MANAGER
  USER
}

enum AssignmentStatus {
  ACTIVE
  ARCHIVED
}

enum PlanStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}

enum SlotStatus {
  PLANNED
  CONFIRMED
  REPLACED
  CANCELLED
}

enum NotificationType {
  ASSIGNMENT_CREATED
  ASSIGNMENT_UPDATED
  ASSIGNMENT_CANCELLED
  ASSIGNMENT_MOVED
}

// üî• –ù–û–í–´–ô enum –¥–ª—è —Ç–∏–ø–∞ —Å–º–µ–Ω—ã
enum ShiftKind {
  DEFAULT   // –æ–±—ã—á–Ω–∞—è —Å–º–µ–Ω–∞
  OFFICE    // —Ä–∞–±–æ—Ç–∞ –≤ –æ—Ñ–∏—Å–µ
  REMOTE    // —É–¥–∞–ª—ë–Ω–∫–∞
  DAY_OFF   // –≤—ã—Ö–æ–¥–Ω–æ–π / day off
}

model Org {
  id          String        @id @default(cuid())
  name        String
  slug        String        @unique
  users       User[]
  workplaces  Workplace[]
  slots       Slot[]
  constraints Constraint[]
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
}

model User {
  id            String         @id @default(cuid())
  orgId         String?
  org           Org?           @relation(fields: [orgId], references: [id])
  email         String         @unique
  password      String
  fullName      String?
  position      String?
  role          UserRole       @default(USER)

  isSystemUser  Boolean        @default(false)
  phone         String?

  assignments   Assignment[]
  notifications Notification[]
  slots         Slot[]
  constraints   Constraint[]
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
}

model Workplace {
  id          String       @id @default(cuid())
  orgId       String
  org         Org          @relation(fields: [orgId], references: [id])
  code        String
  name        String
  location    String?
  isActive    Boolean      @default(true)
  assignments Assignment[]
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  @@unique([orgId, code])
}

model Plan {
  id        String     @id @default(cuid())
  name      String
  startsAt  DateTime
  endsAt    DateTime
  status    PlanStatus @default(DRAFT)
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  slots     Slot[]
}

model Slot {
  id        String     @id @default(cuid())
  planId    String
  plan      Plan       @relation(fields: [planId], references: [id])
  orgId     String
  org       Org        @relation(fields: [orgId], references: [id])
  userId    String
  user      User       @relation(fields: [userId], references: [id])
  dateStart DateTime
  dateEnd   DateTime
  status    SlotStatus @default(PLANNED)
  colorCode String?
  note      String?
  locked    Boolean    @default(false)
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  @@index([planId])
  @@index([dateStart, userId])
  @@index([dateStart, orgId])
}

model Constraint {
  id        String   @id @default(cuid())
  type      String
  payload   Json
  userId    String?
  user      User?    @relation(fields: [userId], references: [id])
  orgId     String?
  org       Org?     @relation(fields: [orgId], references: [id])
  createdAt DateTime @default(now())
}

model Assignment {
  id          String           @id @default(cuid())
  userId      String
  user        User             @relation(fields: [userId], references: [id])
  workplaceId String
  workplace   Workplace        @relation(fields: [workplaceId], references: [id])
  startsAt    DateTime
  endsAt      DateTime?
  status      AssignmentStatus @default(ACTIVE)
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt

  /// –º—è–≥–∫–æ–µ —É–¥–∞–ª–µ–Ω–∏–µ ‚Äî –µ—Å–ª–∏ –Ω–µ null, –∑–Ω–∞—á–∏—Ç –ª–µ–∂–∏—Ç –≤ –∫–æ—Ä–∑–∏–Ω–µ
  deletedAt   DateTime?

  shifts      AssignmentShift[]
}

model AssignmentShift {
  id           String      @id @default(cuid())
  assignmentId String
  assignment   Assignment  @relation(fields: [assignmentId], references: [id])

  /// –î–∞—Ç–∞ —Å–º–µ–Ω—ã (–¥–µ–Ω—å)
  date         DateTime

  /// –ö–æ–Ω–∫—Ä–µ—Ç–Ω–æ–µ –≤—Ä–µ–º—è –Ω–∞—á–∞–ª–∞/–æ–∫–æ–Ω—á–∞–Ω–∏—è —Å–º–µ–Ω—ã
  startsAt     DateTime
  endsAt       DateTime

  /// üî• –¢–∏–ø —Å–º–µ–Ω—ã (–æ—Ñ–∏—Å, —É–¥–∞–ª—ë–Ω–∫–∞, day off –∏ —Ç.–¥.)
  kind         ShiftKind  @default(DEFAULT)

  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt

  @@index([assignmentId, date])
}

model Notification {
  id        String           @id @default(cuid())
  userId    String
  user      User             @relation(fields: [userId], references: [id])
  type      NotificationType
  payload   Json
  createdAt DateTime         @default(now())
  readAt    DateTime?
}

model SmsSettings {
  id        String   @id @default(cuid())
  apiUrl    String?
  apiKey    String?
  sender    String?
  enabled   Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}